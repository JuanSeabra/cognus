<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.victoria.cognusapp.HomePageActivity">

    <Button
        android:id="@+id/Perguntar"
        android:textAllCaps="false"
        android:layout_width="224dp"
        android:layout_height="38dp"
        android:background="@color/colorPrimary"
        android:text="Deseja fazer uma pergunta?"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintLeft_toRightOf="@+id/foto"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/listView"
        app:layout_constraintVertical_bias="0.408" />

    <ImageView
        android:id="@+id/foto"
        android:layout_width="72dp"
        android:layout_height="71dp"
        app:srcCompat="@drawable/icone_pessoa"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/listView"
        app:layout_constraintVertical_bias="0.47"
        android:contentDescription="" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="335dp"
        android:layout_height="397dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.454" />
</android.support.constraint.ConstraintLayout>
