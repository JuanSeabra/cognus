<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.victoria.cognusapp.HomePageActivity">

    <ImageView
        android:id="@+id/foto"
        android:layout_width="72dp"
        android:layout_height="71dp"
        app:srcCompat="@drawable/icone_pessoa"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/listView"
        app:layout_constraintVertical_bias="0.47"
        android:contentDescription="" />

    <EditText
        android:id="@+id/pergunta"
        android:background="@drawable/drawable_contorno"
        android:layout_width="251dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Deseja fazer uma pergunta?"
        tools:layout_editor_absoluteY="30dp"
        app:layout_constraintLeft_toRightOf="@+id/foto"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="335dp"
        android:layout_height="397dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/pergunta" />
</android.support.constraint.ConstraintLayout>
