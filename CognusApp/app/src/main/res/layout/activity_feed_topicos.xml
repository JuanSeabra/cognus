<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.victoria.cognusapp.FeedTopicosActivity">

    <TextView
        android:id="@+id/topico"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:text="MatemÃ¡tica"
        android:textSize="25dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="2dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        tools:layout_constraintLeft_creator="1" />

    <ListView
        android:id="@+id/perguntas"
        android:layout_width="0dp"
        android:layout_height="414dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="3dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/icone_pessoas"
        android:layout_width="30dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/icone_pessoa"
        android:layout_marginLeft="117dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/topico"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/perguntas"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="117dp" />

    <TextView
        android:id="@+id/numero_seguidores"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="5.000.000"
        app:layout_constraintLeft_toRightOf="@+id/icone_pessoas"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/topico"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/perguntas"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
</android.support.constraint.ConstraintLayout>
