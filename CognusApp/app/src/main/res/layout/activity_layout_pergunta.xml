<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.victoria.cognusapp.layout_pergunta"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/tags"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Tags"
        android:textSize="30px"
        android:layout_marginStart="10dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txtPerguntaDesc"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="4dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPerguntaDesc"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:textSize="40px"
        android:text="Pergunta"
        android:layout_marginStart="10dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="33dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/foto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/icone_pessoa"
        android:layout_marginStart="6dp"
        app:layout_constraintRight_toLeftOf="@+id/resposta"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/nome_usuario_resp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/txtPerguntaDesc"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/txtPerguntaDesc" />

    <TextView
        android:id="@+id/nome_usuario_resp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UsuÃ¡rio"
        android:textSize="30px"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="137dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resposta"
        android:background="@drawable/drawable_contorno"
        android:layout_width="278dp"
        android:layout_height="101dp"
        android:text="Resposta"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/numero_respostas"
        app:layout_constraintRight_toRightOf="@+id/numero_respostas"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/tags"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="38dp"
        app:layout_constraintLeft_toRightOf="@+id/numero_respostas" />

    <ImageView
        android:id="@+id/curtir"
        android:layout_width="33dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/curtir"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="9dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/descurtir"
        app:layout_constraintRight_toRightOf="@+id/foto"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/nome_usuario_resp"
        app:layout_constraintTop_toTopOf="@+id/descurtir" />

    <ImageView
        android:id="@+id/descurtir"
        android:layout_width="33dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/descurtir"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintRight_toLeftOf="@+id/numero_respostas"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/nome_usuario_resp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/curtir" />

    <TextView
        android:id="@+id/numero_respostas"
        android:gravity="center"
        android:layout_width="85dp"
        android:layout_height="0dp"
        android:text="N Respostas"
        android:layout_marginStart="67dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/descurtir"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/descurtir"
        app:layout_constraintLeft_toRightOf="@+id/nome_usuario_resp" />

</android.support.constraint.ConstraintLayout>
