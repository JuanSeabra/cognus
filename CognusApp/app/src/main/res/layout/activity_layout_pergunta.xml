<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.victoria.cognusapp.layout_pergunta">

    <TextView
        android:id="@+id/tags"
        android:layout_width="373dp"
        android:layout_height="232dp"
        android:layout_marginLeft="10dp"
        android:text="Tags"
        android:textSize="30px"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toTopOf="parent" />
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPerguntaDesc"
        android:layout_width="364dp"
        android:layout_height="34dp"
        android:layout_marginLeft="10dp"
        android:textSize="40px"
        android:text="Pergunta"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/resposta"
        android:layout_marginStart="10dp" />

    <ImageView
        android:id="@+id/foto"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/icone_pessoa"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/resposta"
        android:layout_marginTop="41dp"
        android:layout_marginBottom="41dp"
        app:layout_constraintTop_toTopOf="@+id/txtPerguntaDesc" />

    <TextView
        android:id="@+id/nome_usuario_resp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UsuÃ¡rio"
        android:textSize="30px"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/foto" />

    <TextView
        android:id="@+id/resposta"
        android:background="@drawable/drawable_contorno"
        android:layout_width="278dp"
        android:layout_height="101dp"
        android:layout_marginRight="27dp"
        android:text="Resposta"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/tags"
        android:layout_marginEnd="27dp"
        app:layout_constraintTop_toTopOf="@+id/tags" />

    <ImageView
        android:id="@+id/curtir"
        android:layout_width="33dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/curtir"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/descurtir"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="@+id/foto"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/nome_usuario_resp"
        app:layout_constraintTop_toTopOf="@+id/descurtir" />

    <ImageView
        android:id="@+id/descurtir"
        android:layout_width="33dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/descurtir"
        app:layout_constraintRight_toLeftOf="@+id/numero_respostas"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tags"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/resposta"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="14dp"
        app:layout_constraintLeft_toRightOf="@+id/curtir" />

    <TextView
        android:id="@+id/numero_respostas"
        android:gravity="center"
        android:layout_width="85dp"
        android:layout_height="0dp"
        android:text="N Respostas"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="124dp"
        app:layout_constraintBottom_toBottomOf="@+id/descurtir"
        android:layout_marginEnd="138dp"
        app:layout_constraintRight_toRightOf="@+id/resposta"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/tags"
        app:layout_constraintTop_toTopOf="@+id/descurtir" />

</android.support.constraint.ConstraintLayout>
