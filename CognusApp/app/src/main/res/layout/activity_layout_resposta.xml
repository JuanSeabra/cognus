<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.victoria.cognusapp.layout_resposta"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/foto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/icone_pessoa"
        android:layout_marginEnd="17dp"
        app:layout_constraintRight_toLeftOf="@+id/resposta"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/follow"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/nome_usuario_resp"
        app:layout_constraintTop_toTopOf="@+id/follow" />

    <TextView
        android:id="@+id/nome_usuario_resp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UsuÃ¡rio"
        android:textSize="30px"
        android:layout_marginStart="28dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/foto"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/resposta"
        android:layout_width="197dp"
        android:layout_height="75dp"
        android:background="@drawable/drawable_contorno"
        android:text="Resposta"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/descurtir"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="46dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="43dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/curtir"
        android:layout_width="33dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/curtir"
        android:layout_marginStart="40dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/descurtir"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/descurtir" />

    <ImageView
        android:id="@+id/descurtir"
        android:layout_width="33dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/descurtir"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/nome_usuario_resp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/resposta"
        android:layout_marginLeft="40dp" />

    <ImageView
        android:id="@+id/follow"
        android:layout_width="47dp"
        android:layout_height="53dp"
        app:srcCompat="@drawable/follow"
        android:layout_marginEnd="27dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="15dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/resposta" />
</android.support.constraint.ConstraintLayout>
