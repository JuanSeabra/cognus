<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.victoria.cognusapp.layout_resposta">

    <ImageView
        android:id="@+id/foto"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="38dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icone_pessoa"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/nome_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="UsuÃ¡rio"
        android:textSize="30px"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/foto" />

    <TextView
        android:id="@+id/resposta"
        android:layout_width="278dp"
        android:layout_height="101dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/drawable_contorno"
        android:text="Resposta"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="27dp" />

    <ImageView
        android:id="@+id/curtir"
        android:layout_width="33dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/curtir"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/descurtir"
        app:layout_constraintTop_toTopOf="@+id/descurtir" />

    <ImageView
        android:id="@+id/descurtir"
        android:layout_width="33dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/descurtir"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/resposta"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/resposta" />

    <ImageView
        android:id="@+id/follow"
        android:layout_width="47dp"
        android:layout_height="53dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/follow"
        android:layout_marginEnd="16dp" />
</android.support.constraint.ConstraintLayout>
